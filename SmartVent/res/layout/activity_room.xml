<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    tools:context=".RoomActivity" >
    
    <TextView
        android:id="@+id/current_temp_val"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/unknown"
        android:textSize="100sp" />

	<TextView
        android:id="@+id/set_temp_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_temperature"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/set_temp_val"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/unknown"
        android:textSize="50sp" />

	<LinearLayout
        android:id="@+id/set_temp_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/set_temp_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/up" />

        <Button
            android:id="@+id/set_temp_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/down" />
    </LinearLayout>

</LinearLayout>